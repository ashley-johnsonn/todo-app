<%# List all tasks %>
<div class="">
    <h1>To Do List</h1>
    <%= link_to "New Task", new_task_path %>
    <% @tasks.each do |task| %>
        <%= link_to task_path(task) do %>
            <div class="task-box">
            <input type="checkbox">
                <div class="task-info">
                    <%= task.title %>
                </div>
                <p>&#8594</p>
            </div>
        <% end %>
    <% end %>
        
    
</div>