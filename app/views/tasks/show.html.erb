<%# Show one task %>
<div class="task-display-box">
    <h1><%= @task.title %></h1>
    <%= @task.description %>
    <div class="button-holder">
        <%= link_to "Edit Task", edit_task_path(@task), class: "button button-light" %>
        <%= link_to "Delete Task", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button button-light" %>
        <%= link_to "Back to Tasks", tasks_path, class: "button button-dark" %>
    </div>
    
</div>